{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock stylesheets %}

{% block body %}
<link rel="stylesheet" href="{{ asset('css/login.css') }}">

{% block nav %}{% endblock nav %}

<div class="container">
    <div class="container container-small">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
        
            {% if app.user %}
            <div class="mb-3">
                Vous êtes connecté en temps que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
            <div class="mb-3">
                <a href="{{ path('app_homepage') }}"> accueil</a>
            </div>
            {% else %}

        
            <h1 class="h3 mb-3 font-weight-bold text-center">Connexion</h1>
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            <label for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >
            {% if app.user %}
                {% else %}
                <div class="register">
                    <p>vous n'avez pas de compte ? <a href="{{ path('app_register') }}">crée un compte</a></p>
                </div>
            {% endif %}
        
        
        
            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html
        
                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}
                <div class="text-center">
                    <button class="btn btn-lg btn-primary mt-4" type="submit">
                        Connexion
                    </button>
                </div>
                {% endif %}
        </form>
        </div>  
</div>


{% endblock %}
