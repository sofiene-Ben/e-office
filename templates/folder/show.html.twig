{% extends 'base.html.twig' %}

{% block title %}Folder{% endblock %}

{% block body %}
    <h1>Folder</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ folder.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ folder.name }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ folder.createdAt ? folder.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ folder.updatedAt ? folder.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ folder.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_folder_index', {id: library.id}) }}">back to list</a>

    <a href="{{ path('app_folder_edit', {id: library.id, slug: folder.slug}) }}">edit</a>

    {{ include('folder/_delete_form.html.twig') }}

    <h1>Dossier : {{ folder.name }}</h1>

{% if documents|length > 0 %}
    <h2>Documents :</h2>
    <ul>
        {% for document in documents %}
            <li>{{ document.name }}</li>
        {% endfor %}
    </ul>
{% else %}
    <p>Aucun document trouv√© dans ce dossier.</p>
{% endif %}

{% endblock %}
