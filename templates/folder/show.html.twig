{% extends 'base.html.twig' %}

{% block title %}{{ folder.name }}{% endblock %}

{% block folder %}{% endblock folder %}
{% block add_document %}{{ path('app_document_new', {id: folder.id}) }}{% endblock add_document %}

    {% block data_show %}

    {% if documents|length > 0 %}
        <div class="data-folder">   
            <ul>
                <h1><li class="data-list">{{ folder.name }} :</li></h1>

            {% for document in folder.documents %}

                <li class="data-list">
                    <a href="{{ path('app_document_show', {id: folder.id, slug: document.slug}) }}">{{ document.name }}</a>
                    <a href="{{ path('document_download', {'slug': document.slug}) }}">download</a>
                    {{ include('document/_delete_form.html.twig') }}
                </li>

            {% endfor %}

            </ul>
        </div>
        {% else %}
            <p>Aucun document trouv√© dans ce dossier.</p>
        {% endif %}

    {% endblock data_show %}

