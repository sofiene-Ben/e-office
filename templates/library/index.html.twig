<div class="container">
    <div class="text-right pb-2 pt-2">
        <button class="btn btn-primary">
            <a href="{{ path('app_library_new') }}">Create new</a>
        </button>
    </div>


    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Library</th>
                <th scope="col" class="text-right" >Action</th>
            </tr>
        </thead>
        <tbody>
            {% for library in libraries %}
            <tr>

                <th scope="row" class="th-name"><a href="{{ path('app_library_show', {'slug': library.slug}) }}">{{ library.name }}</a></th>
                <td class="text-right">
                    <button type="button" class="btn btn-primary btn-rud" data-toggle="modal" data-target="#Modal-{{library.slug}}">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-gear-fill" viewBox="0 0 16 16">
                            <path
                                d="M9.405 1.05c-.413-1.4-2.397-1.4-2.81 0l-.1.34a1.464 1.464 0 0 1-2.105.872l-.31-.17c-1.283-.698-2.686.705-1.987 1.987l.169.311c.446.82.023 1.841-.872 2.105l-.34.1c-1.4.413-1.4 2.397 0 2.81l.34.1a1.464 1.464 0 0 1 .872 2.105l-.17.31c-.698 1.283.705 2.686 1.987 1.987l.311-.169a1.464 1.464 0 0 1 2.105.872l.1.34c.413 1.4 2.397 1.4 2.81 0l.1-.34a1.464 1.464 0 0 1 2.105-.872l.31.17c1.283.698 2.686-.705 1.987-1.987l-.169-.311a1.464 1.464 0 0 1 .872-2.105l.34-.1c1.4-.413 1.4-2.397 0-2.81l-.34-.1a1.464 1.464 0 0 1-.872-2.105l.17-.31c.698-1.283-.705-2.686-1.987-1.987l-.311.169a1.464 1.464 0 0 1-2.105-.872l-.1-.34zM8 10.93a2.929 2.929 0 1 1 0-5.86 2.929 2.929 0 0 1 0 5.858z" />
                        </svg>
                    </button>


                    <!-- Modal -->
                    <div class="modal fade" id="Modal-{{library.slug}}" tabindex="-1" aria-labelledby="exampleModalLabel"
                        aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">{{library.name}} - parametre</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    {{ include('library/_delete_form.html.twig') }}
                                    <button class="btn btn-secondary btn-rud">
                                        <a href="{{ path('app_library_edit', {slug: library.slug}) }}">Modifier</a>
                                    </button>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
                {% else %}
                <th>Aucun enregistrement</th>

            </tr>
            {% endfor %}

        </tbody>
    </table>
</div>

{% endblock %}